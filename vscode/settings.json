{
  "editor.fontLigatures": true,
  // workspace
  "security.workspace.trust.untrustedFiles": "newWindow",
  // editor colors
  "workbench.colorCustomizations": {
    "tab.inactiveBackground": "#101010",
    "tab.inactiveBorder": "#101010",
    "tab.activeBackground": "#101010",
    "tab.activeBorder": "#101010",
    "tab.activeForeground": "#fff",
    "tab.hoverBackground": "#101010",
    "editorGroupHeader.tabsBackground": "#101010",
    "activityBar.background": "#101010",
    "sideBar.background": "#101010",
    "tab.inactiveForeground": "#4e4e4e",
    "statusBar.background": "#101010",
    "statusBar.noFolderBackground": "#101010",
    "statusBar.debuggingBackground": "#101010",
    "editor.background": "#101010",
    // highlight line [current line under this highlighted line]
    "editor.lineHighlightBorder": "#7272721c",
    "editor.lineHighlightBackground": "#7272721c",
    "editorCursor.foreground": "#fff",
    "statusBarItem.remoteBackground": "#0056ff"
  },
  // Syntax highlight
  "editor.tokenColorCustomizations": {
    "strings": "#d6a239",
    "variables": "#9c9c9c",
    "functions": "#4bfe9c",
    "types": "#9c9c9c",
    "keywords": "#9966aa",
    "numbers": "#00a27f",
    "comments": "#515151",
    "textMateRules": [
      // Javascript
      {
        "scope": "keyword.operator.arithmetic.js",
        "settings": {
          "foreground": "#aeaeae"
        }
      },
      {
        "scope": "variable.other.constant.js",
        "settings": {
          "foreground": "#0095ff",
        }
      },
      {
        "scope": "comment",
        "settings": {
          "foreground": "#515151",
        }
      },
      {
        "scope": "variable.other.object.js",
        "settings": {
          "foreground": "#0095ff",
        }
      }
    ]
  },
  // Editor theme
  "workbench.preferredDarkColorTheme": "Visual Studio Dark",
  "editor.hover.enabled": true,
  "editor.scrollbar.horizontal": "visible",
  "npm.keybindingsChangedWarningShown": true,
  "editor.cursorBlinking": "smooth",
  "editor.cursorStyle": "line-thin",
  "editor.scrollbar.verticalScrollbarSize": 6,
  "editor.scrollbar.horizontalScrollbarSize": 6,
  "editor.hideCursorInOverviewRuler": true,
  "editor.renderLineHighlight": "line",
  "editor.glyphMargin": false,
  "editor.folding": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "editor.inlineSuggest.enabled": true,
  "security.workspace.trust.startupPrompt": "always",
  "github.copilot.enable": {
    "*": false,
    "plaintext": true,
    "markdown": true,
    "scminput": false,
    "yaml": false,
    "typescript": true,
    "rust": true
  },
  "files.associations": {
    "*.md": "markdown",
    "*.rs": "rust"
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "eslint.validate": [
    "javascript"
  ],
  // tabs
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "editor.fontSize": 15,
  "vim.commandLineModeKeyBindings": [],
  "vim.cursorStylePerMode.insert": "line-thin",
  "vim.cursorStylePerMode.normal": "block",
  "vim.cursorStylePerMode.visual": "underline",
  "vim.useSystemClipboard": true,
  "vim.insertModeKeyBindings": [
    {
      "before": [
        "j",
        "j"
      ],
      "after": [
        "<Esc>"
      ]
    },
  ],
  "vim.handleKeys": {
    "<C-c>": false,
    "<C-v>": false,
    "<C-x>": false
  },
  "editor.lineNumbers": "relative",
  "errorLens.excludeBySource": [
    "rust-analyzer(type-mismatch)",
    "ts(2304)",
    "eslint(no-labels)"
  ],
  "terminal.integrated.fontFamily": "JetBrains Mono",
  "terminal.integrated.tabs.title": "_",
  "terminal.integrated.defaultLocation": "view", // layout default direction
  "workbench.sideBar.location": "left",
  "workbench.colorTheme": "Default Dark+",
  // format on save
  "editor.formatOnSave": true,
  "terminal.integrated.env.linux": {},
  "git.terminalAuthentication": false,
  "git.autofetch": "all",
  "window.commandCenter": false,
  "workbench.startupEditor": "none",
  "window.restoreFullscreen": true,
  // language specific settings
  "[javascript]": {
    "editor.tabSize": 2
  },
  "[typescript]": {
    "editor.tabSize": 4
  },
  "[python]": {
    "editor.tabSize": 4
  },
  "[rust]": {
    "editor.tabSize": 4,
    "editor.inlayHints.enabled": "offUnlessPressed",
  },
  "[ego]": {
    "editor.tabSize": 2,
    "editor.formatOnSave": true,
  },
  "terminal.external.windowsExec": "C:\\\\WINDOWS\\System32\\wsl.exe -d Ubuntu",
  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "source": "PowerShell",
      "icon": "terminal-powershell"
    },
    "Command Prompt": {
      "path": [
        "${env:windir}\\Sysnative\\cmd.exe",
        "${env:windir}\\System32\\cmd.exe"
      ],
      "args": [],
      "icon": "terminal-cmd"
    },
    "Git Bash": {
      "source": "Git Bash"
    },
    "Ubuntu (WSL)": {
      "path": "C:\\WINDOWS\\System32\\wsl.exe",
      "args": [
        "-d",
        "Ubuntu"
      ]
    }
  },
  "terminal.integrated.automationProfile.windows": {
    "path": "C:\\WINDOWS\\System32\\wsl.exe -d Ubuntu",
  },
  "workbench.editor.enablePreview": false,
  "terminal.integrated.profiles.osx": {
    "bash": {
      "path": "bash",
      "args": [
        "-l"
      ],
      "icon": "terminal-bash"
    },
    "zsh": {
      "path": "zsh",
      "args": [
        "-l"
      ]
    },
    "fish": {
      "path": "fish",
      "args": [
        "-l"
      ]
    },
    "tmux": {
      "path": "tmux",
      "icon": "terminal-tmux"
    },
    "pwsh": {
      "path": "pwsh",
      "icon": "terminal-powershell"
    },
    "csh": {
      "path": "/bin/csh"
    }
  },
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.smoothScrolling": true,
  "git.confirmSync": false,
  "diffEditor.wordWrap": "off",
  "vim.textwidth": 100,
  "vim.targets.smartQuotes.aIncludesSurroundingSpaces": false,
  "github.copilot.editor.enableAutoCompletions": false,
  "window.zoomLevel": 1,
  "window.customTitleBarVisibility": "auto",
  "workbench.layoutControl.enabled": false,
  "workbench.activityBar.location": "hidden",
  "git.openRepositoryInParentFolders": "never",
  "diffEditor.ignoreTrimWhitespace": false,
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },
  "editor.fontFamily": "JetBrains Mono",
  // c development
  "C_Cpp.clang_format_fallbackStyle": "{ BasedOnStyle: Google, IndentWidth: 4, TabWidth: 4}",
  "editor.accessibilitySupport": "off",
  "editor.largeFileOptimizations": false,
  "workbench.iconTheme": "vscode-icons",
  "vsicons.associations.files": [
    {
      "icon": "ego",
      "extensions": [
        "ego",
      ],
      "format": "svg"
    }
  ],
  "vsicons.customIconFolderPath": "/Users/noreplydev/Library/Application Support/Code",
  "vsicons.presets.foldersAllDefaultIcon": true,
  "editor.minimap.enabled": false,
}
